<div class="well">
  <%= simple_form_for(message, url: new_message_path, remote: true) do |f| %>
    <%= f.input :message %>
    <%= f.input :author_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.input :group_id, as: :hidden, input_html: { value: current_group_id } %> 
    <%= f.submit 'Post', class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>

<div class="panel panel-default" id="messages">
  <div class="panel-body">
    <ul class="media-list">
      <% messages.each do |message| %>
        <li>
          <p><%= message.message %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>